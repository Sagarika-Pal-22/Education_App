<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_50sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryDark"
                    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/_15sdp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_3sdp"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardElevation="@dimen/_3sdp">
            <ImageView
                android:id="@+id/img_book"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_100sdp"
                android:padding="@dimen/_2sdp"
                android:src="@drawable/book_1"
                android:scaleType="fitXY"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/book_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:layout_marginVertical="@dimen/_5sdp"
                android:text="Nuclear Physics"
                android:fontFamily="@font/fonts_medium"
                android:textColor="#fff"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/witer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:layout_marginVertical="@dimen/_3sdp"
                android:text="by Priyanka Jangid"
                android:fontFamily="@font/fonts_medium"
                android:textColor="#fff"
                android:textSize="12sp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/text_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="4.3"
                    android:textSize="12sp"
                    android:textColor="#fff" />
                <ImageView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:src="@drawable/star"
                    app:tint="#fff"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:weightSum="3"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/text_details"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_37sdp"
                android:text="Details"
                android:textStyle="bold"
                android:textColor="#fff"
                android:fontFamily="@font/fonts_medium"
                android:gravity="center"/>

            <View
                android:id="@+id/view_details"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_3sdp"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:background="#fff"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/text_reviews"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_37sdp"
                android:text="Reviews"
                android:textStyle="bold"
                android:textColor="#fff"
                android:fontFamily="@font/fonts_medium"
                android:gravity="center"/>

            <View
                android:id="@+id/view_reviews"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_3sdp"
                android:background="#fff"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:visibility="gone"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/text_related"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_37sdp"
                android:text="Related Books"
                android:textStyle="bold"
                android:textColor="#fff"
                android:fontFamily="@font/fonts_medium"
                android:gravity="center"/>

            <View
                android:id="@+id/view_related"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_3sdp"
                android:background="#fff"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:visibility="gone"/>
        </LinearLayout>

    </LinearLayout>
    </LinearLayout>
            </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/linear_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginVertical="@dimen/_10sdp"
            android:gravity="center|start"
            android:text="About the book:"
            android:textStyle="bold"
            android:fontFamily="@font/fonts_medium"
            android:textColor="#000"
            android:textSize="15sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:lineSpacingExtra="@dimen/_3sdp"
            android:gravity="center|start"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting"
            android:textStyle="normal"
            android:fontFamily="@font/fonts_medium"
            android:textSize="13sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginVertical="@dimen/_10sdp"
            android:background="#C5C2C2"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginVertical="@dimen/_10sdp"
            android:gravity="center|start"
            android:text="Author:"
            android:textStyle="bold"
            android:fontFamily="@font/fonts_medium"
            android:textColor="#000"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/_8sdp"
                android:layout_height="@dimen/_8sdp"
                android:src="@drawable/dot" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:text="Justin Cole"
                android:textStyle="normal"
                android:fontFamily="@font/fonts_medium" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginVertical="@dimen/_5sdp"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/_8sdp"
                android:layout_height="@dimen/_8sdp"
                android:src="@drawable/dot" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:text="David Henry"
                android:textStyle="normal"
                android:fontFamily="@font/fonts_medium" />
        </LinearLayout>

    </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_reviews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/_5sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:text="Add Rating"
                        android:textAllCaps="true"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/fonts_medium"
                        android:textColor="#000"
                        android:layout_marginLeft="@dimen/_8sdp"/>

                    <RatingBar
                        android:id="@+id/ratingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Write A Review"
                        android:fontFamily="@font/fonts_medium"
                        android:textAllCaps="true"
                        android:textSize="12sp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_8sdp"/>

                    <EditText
                        android:id="@+id/edit_review"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:gravity="start"
                        android:maxLines="5"
                        android:paddingLeft="@dimen/_5sdp"
                        android:background="@drawable/grey_box"/>

                    <Button
                        android:id="@+id/btn_submit"
                        android:background="@drawable/green_box"
                        android:layout_marginVertical="@dimen/_15sdp"
                        android:layout_width="@dimen/_180sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center"
                        android:text="Submit"
                        android:fontFamily="@font/fonts_medium"
                        android:textColor="#fff"
                        android:textAllCaps="false"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="#DCDADA"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_10sdp"
                    android:id="@+id/rv_reviews"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_related"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_15sdp"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:text="Related Books"
                    android:fontFamily="@font/fonts_medium"
                    android:textColor="#000"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/rv_books"/>
            </LinearLayout>
        </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_alignParentBottom="true">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="#6A6868"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center|start"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/_10sdp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Price:"
                    android:textColor="#000"
                    android:textSize="17sp"
                    android:fontFamily="@font/fonts_medium"
                    android:textStyle="bold"/>
                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/blk_rpe" />
                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="913"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:fontFamily="@font/fonts_medium"
                    android:textStyle="bold"/>
            </LinearLayout>

            <Button
                android:id="@+id/btn_buy"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginVertical="@dimen/_7sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:text="Purchase Now"
                android:textAllCaps="false"
                android:fontFamily="@font/fonts_medium"
                android:background="@color/colorPrimaryDark"
                android:textColor="#fff"/>
        </LinearLayout>



    </RelativeLayout>

</RelativeLayout>