                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.7"
                                android:layout_height="wrap_content"
                                android:text="Style:"
                                android:textColor="#9A9999"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/fonts_medium"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1.3"
                                android:layout_height="wrap_content"
                                android:text="Casual"
                                android:fontFamily="@font/fonts_medium"
                                android:textColor="#000"
                                android:textSize="12sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:weightSum="2">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.7"
                                android:layout_height="wrap_content"
                                android:text="Color:"
                                android:textColor="#9A9999"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/fonts_medium"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1.3"
                                android:layout_height="wrap_content"
                                android:text="Multicolour"
                                android:fontFamily="@font/fonts_medium"
                                android:textColor="#000"
                                android:textSize="12sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:weightSum="2">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.7"
                                android:layout_height="wrap_content"
                                android:text="Season:"
                                android:textColor="#9A9999"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/fonts_medium"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1.3"
                                android:layout_height="wrap_content"
                                android:text="Summer"
                                android:fontFamily="@font/fonts_medium"
                                android:textColor="#000"
                                android:textSize="12sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:weightSum="2">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.7"
                                android:layout_height="wrap_content"
                                android:text="Composition:"
                                android:textColor="#9A9999"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/fonts_medium"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1.3"
                                android:layout_height="wrap_content"
                                android:text="Polyester"
                                android:fontFamily="@font/fonts_medium"
                                android:textColor="#000"
                                android:textSize="12sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:weightSum="2">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.7"
                                android:layout_height="wrap_content"
                                android:text="Material:"
                                android:textColor="#9A9999"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/fonts_medium"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1.3"
                                android:layout_height="wrap_content"
                                android:text="Cotton"
                                android:fontFamily="@font/fonts_medium"
                                android:textColor="#000"
                                android:textSize="12sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:weightSum="2">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.7"
                                android:layout_height="wrap_content"
                                android:text="Fit Type:"
                                android:textColor="#9A9999"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/fonts_medium"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1.3"
                                android:layout_height="wrap_content"
                                android:text="Regular Fit"
                                android:fontFamily="@font/fonts_medium"
                                android:textColor="#000"
                                android:textSize="12sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:weightSum="2">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.7"
                                android:layout_height="wrap_content"
                                android:text="Length:"
                                android:textColor="#9A9999"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/fonts_medium"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1.3"
                                android:layout_height="wrap_content"
                                android:text="Regular"
                                android:fontFamily="@font/fonts_medium"
                                android:textColor="#000"
                                android:textSize="12sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:weightSum="2">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.7"
                                android:layout_height="wrap_content"
                                android:text="Neckline:"
                                android:textColor="#9A9999"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/fonts_medium"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1.3"
                                android:layout_height="wrap_content"
                                android:text="Round Neck"
                                android:fontFamily="@font/fonts_medium"
                                android:textColor="#000"
                                android:textSize="12sp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/greyL"
                        android:layout_marginTop="@dimen/_8sdp"/>

