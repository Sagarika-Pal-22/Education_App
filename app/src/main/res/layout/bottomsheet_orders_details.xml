<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/close"
                android:layout_gravity="end"
                android:paddingRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"/>
            <ImageView
                android:id="@+id/img_order"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_120sdp"
                android:scaleType="fitXY"
                android:padding="@dimen/_5sdp"
                android:layout_gravity="center"
                android:src="@drawable/book_2"
                android:layout_marginTop="@dimen/_5sdp"/>

            <TextView
                android:id="@+id/text_title_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Applied Chemistry"
                android:fontFamily="@font/fonts_medium"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginTop="@dimen/_10sdp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order Date:"
                    android:textColor="#3C3B3B"
                    android:fontFamily="@font/fonts_medium"
                    android:textStyle="bold"
                    android:textSize="12sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14-Feb-2020"
                    android:textStyle="normal"
                    android:textSize="12sp"
                    android:textColor="#3C3B3B"
                    android:fontFamily="@font/fonts_medium"
                    android:layout_marginLeft="@dimen/_10sdp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_3sdp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order Id:"
                    android:textColor="#3C3B3B"
                    android:fontFamily="@font/fonts_medium"
                    android:textStyle="bold"
                    android:textSize="12sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="408-5456655-365685"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:fontFamily="@font/fonts_medium"
                    android:textStyle="bold"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_3sdp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Amount:"
                    android:textStyle="bold"
                    android:textColor="#3C3B3B"
                    android:fontFamily="@font/fonts_medium"
                    android:textSize="12sp"/>
                <ImageView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:src="@drawable/blk_rpe"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_3sdp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="311.00"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="#000"
                    android:layout_marginLeft="@dimen/_1sdp"/>
                <LinearLayout
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:orientation="horizontal"
                    android:background="@drawable/grey_box"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/_10sdp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Qty:"
                        android:textStyle="bold"
                        android:textColor="#3C3B3B"
                        android:fontFamily="@font/fonts_medium"
                        android:textSize="12sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:layout_marginLeft="@dimen/_3sdp"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/grey_box"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payment Method"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#3C3B3B"
                    android:fontFamily="@font/fonts_medium"
                    android:paddingLeft="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_8sdp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pay On Delivery (POD)"
                    android:textSize="12sp"
                    android:textColor="#000"
                    android:textStyle="normal"
                    android:fontFamily="@font/fonts_medium"
                    android:paddingLeft="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_3sdp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="#989595"
                    android:layout_marginTop="@dimen/_8sdp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Billing Address"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#3C3B3B"
                    android:fontFamily="@font/fonts_medium"
                    android:paddingLeft="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_8sdp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kolkata, WEST BENGAL, 700084"
                    android:textSize="12sp"
                    android:textColor="#000"
                    android:textStyle="normal"
                    android:fontFamily="@font/fonts_medium"
                    android:paddingLeft="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_3sdp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shipping Address"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#3C3B3B"
                    android:fontFamily="@font/fonts_medium"
                    android:paddingLeft="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_8sdp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kolkata, WEST BENGAL, 700084"
                    android:textSize="12sp"
                    android:textColor="#000"
                    android:textStyle="normal"
                    android:fontFamily="@font/fonts_medium"
                    android:paddingLeft="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginBottom="@dimen/_8sdp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:background="#989595"
                android:layout_marginTop="@dimen/_10sdp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/back_to_details"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                app:cardCornerRadius="@dimen/_3sdp"
                app:cardElevation="@dimen/_3sdp"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginVertical="@dimen/_20sdp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Product Details"
                    android:fontFamily="@font/fonts_medium"
                    android:layout_gravity="center"
                    android:textColor="#fff"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</LinearLayout>
