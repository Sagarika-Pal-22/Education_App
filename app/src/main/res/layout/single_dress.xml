<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="@dimen/_3sdp"
    android:layout_marginVertical="@dimen/_5sdp"
    android:id="@+id/linear_items"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_120sdp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_1sdp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="@dimen/_5sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp">
                    <ImageView
                        android:id="@+id/img_item"
                        android:transitionName="transition"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/_3sdp"
                        android:src="@drawable/cloth_2"
                        android:scaleType="fitXY"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp">
                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_alignParentRight="true"
                            android:layout_marginVertical="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:src="@drawable/favrt"
                            app:tint="#EC0654"/>
                    </RelativeLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/green_box"
                    android:layout_marginTop="-15dp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/_4sdp">

                    <TextView
                        android:id="@+id/text_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.3"
                        android:textColor="#fff"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:src="@drawable/star"
                        app:tint="#fff" />
                </LinearLayout>

                <TextView
                    android:id="@+id/text_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:text="Red skirt Gray coat Girls"
                    android:maxLines="2"
                    android:fontFamily="@font/fonts_medium"
                    android:textColor="#000"
                    android:textSize="13sp"
                    android:layout_marginTop="@dimen/_10sdp" />


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginVertical="@dimen/_5sdp"
                                    android:layout_marginHorizontal="@dimen/_10sdp"
                                    android:gravity="center|start">
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:layout_gravity="center">
                                        <ImageView
                                            android:layout_width="@dimen/_10sdp"
                                            android:layout_height="@dimen/_10sdp"
                                            android:src="@drawable/blk_rpe"
                                            android:layout_gravity="center"/>
                                        <TextView
                                            android:id="@+id/text_price"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="913"
                                            android:textColor="#000"
                                            android:textSize="13sp"
                                            android:fontFamily="@font/fonts_medium"
                                            android:textStyle="normal"/>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:layout_marginHorizontal="@dimen/_3sdp"
                                        android:layout_gravity="center">
                                        <ImageView
                                            android:layout_width="@dimen/_8sdp"
                                            android:layout_height="@dimen/_8sdp"
                                            android:src="@drawable/grey_ruppee"
                                            android:layout_gravity="center" />
                                        <TextView
                                            android:id="@+id/text_rs_cut"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="50"
                                            android:textSize="10sp"
                                            android:fontFamily="@font/fonts_medium"
                                            android:textStyle="normal"/>
                                    </LinearLayout>
                                    <TextView
                                        android:id="@+id/text_off"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="46 % off"
                                        android:textSize="10sp"
                                        android:fontFamily="@font/fonts_medium"
                                        android:textColor="#F19712"/>
                                </LinearLayout>
            </LinearLayout>


        </RelativeLayout>



    </androidx.cardview.widget.CardView>
</LinearLayout>