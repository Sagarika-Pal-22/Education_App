<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_20sdp"
            android:text="Take Admission"
            android:textStyle="bold"
            android:textColor="#3C3B3B"
            android:fontFamily="@font/fonts_medium"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:text="Select Standard"
            android:textColor="#3C3B3B"
            android:fontFamily="@font/fonts_medium"/>
        <com.weiwangcn.betterspinner.library.BetterSpinner
            android:id="@+id/spin_class"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:background="@drawable/grey_box"
            android:fontFamily="@font/fonts_medium"
            android:layout_marginVertical="@dimen/_5sdp"
            android:textColor="#000"
            android:padding="@dimen/_8sdp"
            android:hint="Select standard"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Academic Session"
            android:textColor="#3C3B3B"
            android:fontFamily="@font/fonts_medium"/>
        <EditText
            android:id="@+id/edit_session"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:fontFamily="@font/fonts_medium"
            android:background="@drawable/grey_box"
            android:layout_marginTop="@dimen/_8sdp"
            android:hint="Enter"
            android:textSize="12sp"
            android:paddingLeft="@dimen/_10sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Date"
            android:textColor="#3C3B3B"
            android:fontFamily="@font/fonts_medium"/>
        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:gravity="center_vertical"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:fontFamily="@font/fonts_medium"
            android:background="@drawable/grey_box"
            android:layout_marginTop="@dimen/_8sdp"
            android:hint="choose date"
            android:textSize="12sp"
            android:paddingLeft="@dimen/_10sdp"/>

        <Button
            android:id="@+id/aply_submit"
            android:layout_width="@dimen/_180sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginVertical="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:background="@drawable/green_box"
            android:text="Add Payment"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:fontFamily="@font/fonts_medium"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <Button
                android:id="@+id/btn_cancel"
                android:background="#6A6767"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:textAllCaps="false"
                android:text="Cancel"
                android:fontFamily="@font/fonts_medium"
                android:textColor="#fff" />
            <Button
                android:id="@+id/btn_submit"
                android:background="@color/colorPrimaryDark"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:text="Submit"
                android:fontFamily="@font/fonts_medium"
                android:textColor="#fff"
                android:textAllCaps="false"/>

        </LinearLayout>

    </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>