<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    android:id="@+id/image_des"
                    android:scaleType="fitXY"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/work_home"/>
                <TextView
                    android:id="@+id/text_jobName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/fonts_medium"
                    android:text="Sanpdeal process jobs for CCE/Back Office"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginLeft="@dimen/_8sdp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/text_location"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textColor="#000"
                        android:textStyle="normal"
                        android:textSize="12sp"
                        android:layout_marginLeft="@dimen/_8sdp"/>

                </LinearLayout>
                <TextView
                    android:id="@+id/text_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/fonts_medium"
                    android:text="West Bengal"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:textColor="#000"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:background="@color/colorGrey"
                android:layout_marginTop="@dimen/_10sdp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/text_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Details"
                    android:fontFamily="@font/fonts_medium"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_8sdp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="@dimen/_5sdp">
                    <TextView
                        android:id="@+id/text_salary_period"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fonts_medium"
                        android:text="Salary Period"
                        android:textAllCaps="true"
                        android:textSize="14sp"
                        android:layout_marginLeft="@dimen/_8sdp"/>
                    <TextView
                        android:id="@+id/text_salary_time"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/fonts_medium"
                        android:layout_height="wrap_content"
                        android:text="Monthly"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        android:textColor="#000"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="@dimen/_5sdp">
                    <TextView
                        android:id="@+id/text_salary"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/fonts_medium"
                        android:layout_height="wrap_content"
                        android:text="Salary "
                        android:textAllCaps="true"
                        android:textSize="14sp"
                        android:layout_marginLeft="@dimen/_8sdp"/>
                    <TextView
                        android:id="@+id/text_salary_amount"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/fonts_medium"
                        android:layout_height="wrap_content"
                        android:text="20,000/-"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        android:textColor="#000"/>
                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:background="@color/colorGrey"
                android:layout_marginTop="@dimen/_10sdp"/>
            <TextView
                android:id="@+id/text_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Description"
                android:fontFamily="@font/fonts_medium"
                android:layout_marginLeft="@dimen/_8sdp"
                android:textColor="#000"
                android:textSize="16sp"
                android:layout_marginTop="@dimen/_10sdp"/>
            <TextView
                android:id="@+id/text_description_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:fontFamily="@font/fonts_medium"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="Required qualification- 10th pass to Graduates can apply.\nCalling jobs/CCE/Data Entry Job in Kolkata."
                android:layout_marginLeft="@dimen/_8sdp"
                android:textColor="#000"
                android:textSize="15sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_5sdp"
                android:background="@color/colorGrey"
                android:layout_marginTop="@dimen/_10sdp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <Button
        android:id="@+id/btn_apply"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_38sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:text="Apply For Job"
        android:fontFamily="@font/fonts_medium"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:background="@drawable/green_box"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
