<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

           <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_10sdp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/_35sdp"
                android:orientation="horizontal"
                android:background="@drawable/red_background"
                android:padding="@dimen/_3sdp"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/phone"
                    app:tint="#2381CC"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Call"
                    android:fontFamily="@font/fonts_medium"
                    android:textColor="#2381CC"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:textSize="14sp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/_35sdp"
                android:orientation="horizontal"
                android:background="@drawable/red_background"
                android:padding="@dimen/_3sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/direction"
                    app:tint="#2381CC"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Direction"
                    android:fontFamily="@font/fonts_medium"
                    android:textStyle="bold"
                    android:textColor="#2381CC"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        app:cardCornerRadius="@dimen/_8sdp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="@dimen/_10sdp"
                                android:gravity="center"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="0.6"
                                    android:layout_height="wrap_content"
                                    android:text="Tutor's Name:"
                                    android:fontFamily="@font/fonts_medium"
                                    android:textColor="#000"
                                    android:textSize="13sp"
                                    android:textStyle="bold"/>
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1.4"
                                    android:layout_marginHorizontal="@dimen/_5sdp"
                                    android:layout_height="wrap_content"
                                    android:text="Debjit Mukherjee"
                                    android:fontFamily="@font/fonts_medium"
                                    android:textSize="13sp"
                                    android:textStyle="normal"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginVertical="@dimen/_10sdp"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="0.6"
                                    android:layout_height="wrap_content"
                                    android:text="Tutor Address:"
                                    android:fontFamily="@font/fonts_medium"
                                    android:textColor="#000"
                                    android:textSize="13sp"
                                    android:textStyle="bold"/>
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1.4"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="@dimen/_5sdp"
                                    android:text="488, Ajoy Nagar, Eastern Metropolitan By-Pass Near Peerless Hospital, behind Satyajit Ray Film Institution, Kolkata, West Bengal 700094"
                                    android:fontFamily="@font/fonts_medium"
                                    android:textSize="13sp"
                                    android:textStyle="normal"/>
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:layout_marginHorizontal="@dimen/_3sdp"
                                android:background="#EFEDED"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="@dimen/_10sdp"
                                android:gravity="center"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="0.6"
                                    android:layout_height="wrap_content"
                                    android:text="Phone number:"
                                    android:fontFamily="@font/fonts_medium"
                                    android:textColor="#000"
                                    android:textSize="13sp"
                                    android:textStyle="bold"/>
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1.4"
                                    android:layout_marginHorizontal="@dimen/_5sdp"
                                    android:layout_height="wrap_content"
                                    android:text="033-22293565"
                                    android:fontFamily="@font/fonts_medium"
                                    android:textSize="13sp"
                                    android:textStyle="normal"/>
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:layout_marginHorizontal="@dimen/_3sdp"
                                android:background="#EFEDED"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="@dimen/_10sdp"
                                android:gravity="center"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="0.6"
                                    android:layout_height="wrap_content"
                                    android:text="Email id:"
                                    android:fontFamily="@font/fonts_medium"
                                    android:textColor="#000"
                                    android:textSize="13sp"
                                    android:textStyle="bold"/>
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1.4"
                                    android:layout_marginHorizontal="@dimen/_5sdp"
                                    android:layout_height="wrap_content"
                                    android:text="loretohouse.school@gmail.com"
                                    android:fontFamily="@font/fonts_medium"
                                    android:textSize="13sp"
                                    android:textStyle="normal"/>
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:layout_marginHorizontal="@dimen/_3sdp"
                                android:background="#EFEDED"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="@dimen/_10sdp"
                                android:gravity="center"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="0.6"
                                    android:layout_height="wrap_content"
                                    android:text="Medium:"
                                    android:fontFamily="@font/fonts_medium"
                                    android:textColor="#000"
                                    android:textSize="13sp"
                                    android:textStyle="bold"/>
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1.4"
                                    android:layout_marginHorizontal="@dimen/_5sdp"
                                    android:layout_height="wrap_content"
                                    android:text="English, Bengali"
                                    android:fontFamily="@font/fonts_medium"
                                    android:textSize="13sp"
                                    android:textStyle="normal"/>
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:layout_marginHorizontal="@dimen/_3sdp"
                                android:background="#EFEDED"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="@dimen/_10sdp"
                                android:gravity="center"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="0.6"
                                    android:layout_height="wrap_content"
                                    android:text="Available Time:"
                                    android:fontFamily="@font/fonts_medium"
                                    android:textColor="#000"
                                    android:textSize="13sp"
                                    android:textStyle="bold"/>
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1.4"
                                    android:layout_marginHorizontal="@dimen/_5sdp"
                                    android:layout_height="wrap_content"
                                    android:text="Monday to Friday 7:40 am - 3:40 pm"
                                    android:fontFamily="@font/fonts_medium"
                                    android:textSize="13sp"
                                    android:textStyle="normal"/>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:src="@drawable/dot"
                            app:tint="@color/colorPrimaryDark"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_5sdp"
                            android:text="Speciality In:"
                            android:typeface="serif"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="17sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:id="@+id/rv_speciality"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:src="@drawable/dot"
                            app:tint="@color/colorPrimaryDark"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_5sdp"
                            android:text="Tutor's Achievements"
                            android:typeface="serif"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="17sp"
                            android:textStyle="bold" />
                    </LinearLayout>


                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rv_achievement"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="#DCDADA"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_reviews"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="@dimen/_5sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="Add Rating"
                            android:textAllCaps="true"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/fonts_medium"
                            android:textColor="#000"
                            android:layout_marginLeft="@dimen/_8sdp"/>

                        <RatingBar
                            android:id="@+id/ratingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Write A Review"
                            android:fontFamily="@font/fonts_medium"
                            android:textAllCaps="true"
                            android:textSize="12sp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_8sdp"/>

                        <EditText
                            android:id="@+id/edit_review"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_80sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_margin="@dimen/_5sdp"
                            android:gravity="start"
                            android:maxLines="5"
                            android:paddingLeft="@dimen/_5sdp"
                            android:background="@drawable/grey_box"/>

                        <Button
                            android:id="@+id/btn_submit"
                            android:background="@drawable/green_box"
                            android:layout_marginVertical="@dimen/_15sdp"
                            android:layout_width="@dimen/_180sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_gravity="center"
                            android:text="Submit"
                            android:fontFamily="@font/fonts_medium"
                            android:textColor="#fff"
                            android:textAllCaps="false"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="#DCDADA"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/_10sdp"
                        android:id="@+id/rv_reviews"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

