<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_3sdp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardBackgroundColor="#fff"
        android:layout_marginHorizontal="@dimen/_5sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_10sdp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7-9-2020"
                    android:textColor="#959393"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:typeface="serif"
                    android:textStyle="bold"
                    android:textSize="12sp" />

                <View
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:background="#FF959393" />
                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:text="8:30 PM"
                    android:typeface="serif"
                    android:textStyle="bold"
                    android:textColor="#FF959393"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginVertical="@dimen/_5sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:background="#FF959393"/>
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_5sdp"
                android:text="Tuition Fee Pending"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:typeface="serif"
                android:textStyle="bold"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/notification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/_3sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:fontFamily="@font/fonts_medium"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="#3C3B3B"
                android:text="Parents are requested to pay the pending fees for the next Tuition session immediately within the given time." />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginVertical="@dimen/_5sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:background="#FF959393"/>

            <Button
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginVertical="@dimen/_5sdp"
                android:background="@drawable/green_box"
                android:textSize="12sp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:text="Pay Now"
                android:textAllCaps="false"
                android:textColor="#fff"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>