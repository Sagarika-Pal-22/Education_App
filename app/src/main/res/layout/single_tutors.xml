<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_4sdp"
    android:id="@+id/linear_tuttors"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_160sdp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_1sdp"
        app:cardCornerRadius="@dimen/_5sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_90sdp">
                    <ImageView
                        android:id="@+id/img_tutor"
                        android:transitionName="transition"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_90sdp"
                        android:src="@drawable/tutor"
                        android:scaleType="fitXY"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp">
                        <ImageView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:src="@drawable/favrt"
                            app:tint="#EC0654"/>
                    </RelativeLayout>
                </RelativeLayout>

                <TextView
                    android:id="@+id/text_tutor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:text="Debjit Mukherjee"
                    android:fontFamily="@font/fonts_medium"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:layout_marginTop="@dimen/_20sdp" />
                <TextView
                    android:id="@+id/text_adrss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:layout_gravity="center"
                    android:text=" 2nd Floor, Rajpur marketing Sonarpur Kichukhon restaurant Building, Kolkata, West Bengal 700150"
                    android:maxLines="1"
                    android:textSize="13sp"
                    android:fontFamily="@font/fonts_medium" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_80sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:background="@drawable/green_box">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_4sdp"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/text_review"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.3"
                        android:textSize="12sp"
                        android:textColor="#fff" />
                    <ImageView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:src="@drawable/star"
                        app:tint="#fff"/>
                </LinearLayout>
            </RelativeLayout>

        </RelativeLayout>



    </androidx.cardview.widget.CardView>

</LinearLayout>