<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:textStyle="bold"
        android:textSize="12sp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:text="Your Destination"
        android:fontFamily="@font/fonts_medium"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_5sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:textColor="#3C3B3B"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/_5sdp"
        android:text="Narayana High School"
        android:fontFamily="@font/fonts_medium"/>


    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:background="@drawable/grey_box"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:src="@drawable/location"
            app:tint="@color/colorPrimaryDark"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#3C3B3B"
            android:textStyle="normal"
            android:textSize="14sp"
            android:text="N-10,Block N,Saket,New Delhi-110017,India"
            android:fontFamily="@font/fonts_medium"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_5sdp"
        android:background="#FFEFEFEF"
        android:layout_marginVertical="@dimen/_10sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:orientation="horizontal"
        android:background="@drawable/grey_box"
        android:gravity="center"
        android:layout_marginHorizontal="@dimen/_10sdp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/search"
            android:layout_marginLeft="@dimen/_5sdp"
            app:tint="#AAA4A4"
            android:layout_marginHorizontal="5dp"/>

        <EditText
            android:id="@+id/search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="11"
            android:background="@null"
            android:fontFamily="@font/fonts_medium"
            android:hint="Where To?"
            android:textSize="14sp"
            android:textStyle="normal"/>

        <Button
            android:id="@+id/btn_search"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_25sdp"
            android:text="View Routes"
            android:textSize="12sp"
            android:fontFamily="@font/fonts_medium"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:textColor="#fff"
            android:textAllCaps="false"
            android:background="@color/colorPrimaryDark"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear_route"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="12sp"
            android:text="Your Routes"
            android:fontFamily="@font/fonts_medium"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:text="Patuli (Starting Point)"
            android:fontFamily="@font/fonts_medium"
            android:textColor="#000"
            android:textStyle="normal"
            android:textSize="15sp"/>
        <View
            android:layout_width="@dimen/_5sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:background="@drawable/dotted_line"
            android:layout_marginHorizontal="@dimen/_20sdp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:text="Peerless"
            android:fontFamily="@font/fonts_medium"
            android:textColor="#000"
            android:textStyle="normal"
            android:textSize="15sp"/>
        <View
            android:layout_width="@dimen/_5sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:background="@drawable/dotted_line"
            android:layout_marginHorizontal="@dimen/_20sdp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:text="Ruby More"
            android:layout_gravity="center"
            android:fontFamily="@font/fonts_medium"
            android:textColor="#000"
            android:textStyle="normal"
            android:textSize="15sp"/>
        <View
            android:layout_width="@dimen/_5sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:background="@drawable/dotted_line"
            android:layout_marginHorizontal="@dimen/_20sdp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:text="VIP Bazar"
            android:layout_gravity="center"
            android:fontFamily="@font/fonts_medium"
            android:textColor="#000"
            android:textStyle="normal"
            android:textSize="15sp"/>
        <View
            android:layout_width="@dimen/_5sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:background="@drawable/dotted_line"
            android:layout_marginHorizontal="@dimen/_20sdp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:text="Science City"
            android:layout_gravity="center"
            android:fontFamily="@font/fonts_medium"
            android:textColor="#000"
            android:textStyle="normal"
            android:textSize="15sp"/>
        <View
            android:layout_width="@dimen/_5sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:background="@drawable/dotted_line"
            android:layout_marginHorizontal="@dimen/_20sdp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:text="Chingri Ghata"
            android:layout_gravity="center"
            android:fontFamily="@font/fonts_medium"
            android:textColor="#000"
            android:textStyle="normal"
            android:textSize="15sp"/>
        <View
            android:layout_width="@dimen/_5sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:background="@drawable/dotted_line"/>
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:text="Nicco Park (Your Destination)"
            android:layout_gravity="center"
        android:fontFamily="@font/fonts_medium"
        android:textColor="#000"
        android:textStyle="normal"
        android:textSize="15sp"/>

    </LinearLayout>

</LinearLayout>