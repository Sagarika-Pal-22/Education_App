<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/linear_communication"
    android:layout_marginTop="@dimen/_10sdp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginHorizontal="@dimen/_5sdp">
            <ImageView
                android:id="@+id/img_fav"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/principal"
                android:scaleType="fitXY"
                android:padding="@dimen/_3sdp"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="@dimen/_3sdp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tchr_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|start"
                    android:text="Principal"
                    android:fontFamily="@font/fonts_medium"
                    android:textColor="#2394ED"
                    android:textStyle="bold"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/msg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_3sdp"
                    android:gravity="center|start"
                    android:text="The parents are cordially..."
                    android:fontFamily="@font/fonts_medium"
                    android:textSize="12sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/date"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                android:text="01 Sep 2020"
                android:fontFamily="@font/fonts_medium"
                android:textSize="10sp" />

        </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginVertical="@dimen/_5sdp"
        android:background="@color/greyL"/>
</LinearLayout>