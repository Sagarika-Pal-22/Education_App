<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linear_schedule"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardUseCompatPadding="true"
                android:elevation="@dimen/_5sdp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_10sdp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/subj_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:text="Environment Studies"
                        android:fontFamily="@font/fonts_medium"
                        android:textSize="17sp"
                        android:textColor="#05A193"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/_5sdp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/exam_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:text="Ended on 06 Aug, 2020"
                            android:fontFamily="@font/fonts_medium"
                            android:textSize="14sp"
                            android:textColor="#0D25AA"
                            android:layout_marginTop="@dimen/_5sdp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/_5sdp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:text="Topic:"
                            android:fontFamily="@font/fonts_medium"
                            android:textSize="14sp" />
                        <TextView
                            android:id="@+id/subj_topic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Air Pollution"
                            android:fontFamily="@font/fonts_medium"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_alignParentRight="true">
        <TextView
            android:id="@+id/test_type"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_25sdp"
            android:gravity="center"
            android:background="#3FA33C"
            android:text="class test"
            android:fontFamily="@font/fonts_medium"
            android:textSize="14sp"
            android:textColor="#fff"
            android:layout_marginTop="@dimen/_5sdp"/>
    </RelativeLayout>

    </RelativeLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/card_routine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardUseCompatPadding="true"
        app:cardElevation="@dimen/_2sdp"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_10sdp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:text="Half Yearly Schedule"
                android:fontFamily="@font/fonts_medium"
                android:textSize="14sp"
                android:textColor="#0D25AA"
                android:textStyle="normal"
                android:layout_marginTop="@dimen/_5sdp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_5sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="English"
                    android:textStyle="normal"
                    android:textColor="#000"
                    android:fontFamily="@font/fonts_medium"
                    android:gravity="center|start"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="5-10-2020"
                    android:textStyle="normal"
                    android:fontFamily="@font/fonts_medium"
                    android:gravity="center|start"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Mathematics"
                    android:textStyle="normal"
                    android:textColor="#000"
                    android:fontFamily="@font/fonts_medium"
                    android:gravity="center|start"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="7-10-2020"
                    android:textStyle="normal"
                    android:fontFamily="@font/fonts_medium"
                    android:gravity="center|start"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_5sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Science"
                    android:textStyle="normal"
                    android:textColor="#000"
                    android:fontFamily="@font/fonts_medium"
                    android:gravity="center|start"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="09-10-2020"
                    android:textStyle="normal"
                    android:fontFamily="@font/fonts_medium"
                    android:gravity="center|start"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="General Knowledge"
                    android:textStyle="normal"
                    android:textColor="#000"
                    android:fontFamily="@font/fonts_medium"
                    android:gravity="center|start"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="10-10-2020"
                    android:textStyle="normal"
                    android:fontFamily="@font/fonts_medium"
                    android:gravity="center|start"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_5sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="History"
                    android:textStyle="normal"
                    android:textColor="#000"
                    android:fontFamily="@font/fonts_medium"
                    android:gravity="center|start"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="12-10-2020"
                    android:textStyle="normal"
                    android:fontFamily="@font/fonts_medium"
                    android:gravity="center|start"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Geography"
                    android:textStyle="normal"
                    android:textColor="#000"
                    android:fontFamily="@font/fonts_medium"
                    android:gravity="center|start"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="14-10-2020"
                    android:textStyle="normal"
                    android:fontFamily="@font/fonts_medium"
                    android:gravity="center|start"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_5sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Social Study"
                    android:textStyle="normal"
                    android:textColor="#000"
                    android:fontFamily="@font/fonts_medium"
                    android:gravity="center|start"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="15-10-2020"
                    android:textStyle="normal"
                    android:fontFamily="@font/fonts_medium"
                    android:gravity="center|start"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Hindi"
                    android:textStyle="normal"
                    android:textColor="#000"
                    android:fontFamily="@font/fonts_medium"
                    android:gravity="center|start"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="17-10-2020"
                    android:textStyle="normal"
                    android:fontFamily="@font/fonts_medium"
                    android:gravity="center|start"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>