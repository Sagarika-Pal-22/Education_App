<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How do I solve logical reasoning questions?"
        android:fontFamily="@font/fonts_medium"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_4sdp"
        android:textSize="15sp"
        android:textStyle="normal"
        android:textColor="#000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginVertical="@dimen/_10sdp"
        android:gravity="center"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            app:cardCornerRadius="@dimen/_20sdp">
            <ImageView
                android:id="@+id/img_student"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/book"
                android:scaleType="fitXY"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:orientation="vertical">
        <TextView
            android:id="@+id/text_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shantanu Nayek"
            android:fontFamily="@font/fonts_medium"
            android:textSize="14sp"
            android:textColor="#000" />
        <TextView
            android:id="@+id/text_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2h ago"
            android:fontFamily="@font/fonts_medium"
            android:textSize="12sp"
            android:layout_marginTop="@dimen/_3sdp"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/problem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:text="t is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout."
        android:fontFamily="@font/fonts_medium"
        android:textSize="12sp"
        android:layout_marginTop="@dimen/_3sdp"/>
<View
    android:layout_width="match_parent"
    android:layout_height="@dimen/_1sdp"
    android:layout_marginVertical="@dimen/_10sdp"
    android:background="#E4E4E4"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/message"/>
        <TextView
            android:id="@+id/comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:text="50"
            android:fontFamily="@font/fonts_medium"
            android:textSize="12sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_5sdp"
        android:layout_marginVertical="@dimen/_10sdp"
        android:background="#E4E4E4"/>


</LinearLayout>