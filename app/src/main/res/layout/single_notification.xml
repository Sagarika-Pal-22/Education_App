<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_3sdp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardBackgroundColor="#EEEFEF"
        android:layout_marginHorizontal="@dimen/_5sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/notice_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Safety Protocols For Summer"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:typeface="serif"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginVertical="@dimen/_10sdp"/>

            <com.borjabravo.readmoretextview.ReadMoreTextView
                android:id="@+id/notice_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley Lorem Ipsum is simply dummy text of the printing and typesetting..."
                app:trimExpandedText="@string/read_less"
                app:trimCollapsedText="@string/read_more"
                app:trimMode="trimModeLine"
                app:trimLength="3"
                app:colorClickableText="#000"
                android:lineSpacingExtra="@dimen/_3sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:fontFamily="@font/fonts_medium"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="#3C3B3B"
                android:layout_marginBottom="@dimen/_15sdp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="#AAA4A4"
                android:layout_marginHorizontal="@dimen/_10sdp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginVertical="@dimen/_5sdp"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/text_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="7/9/2020"
                            android:fontFamily="@font/fonts_medium"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:textSize="12sp"
                            android:textStyle="normal"/>
                        <View
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:background="#858484"
                            android:layout_marginHorizontal="@dimen/_10sdp"/>
                        <TextView
                            android:id="@+id/text_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8:30 PM"
                            android:fontFamily="@font/fonts_medium"
                            android:textSize="12sp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>